{
  "compilerOptions": {
    "target": "es2016",                                  
    "jsx": "react-jsx",                                  
    "module": "commonjs",                               
    "baseUrl": "./src",                                  
    "paths": {
      "src/*": ["./src/*"]
    },                                     
    "types": ["react/next", "react-dom/next"],                                      
    "allowJs": true,                                 
    "checkJs": false,                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           

    "strict": true,                                     
    "noImplicitAny": true,                              

    "skipLibCheck": true,                                 
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src", "decs.d.ts"]
}
